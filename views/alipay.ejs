<% include _header %>

<div class="alipay-content">
  <h2 class="title">Order <%= soft %></h2>
  <img class="icon" src="<%= icon %>" width="250px" height="250px">

    <% include _page_msg %>

  <div>
  <%= qrCode %>
  <%= noInvoice %>
  </div>

  <% if (qrCode) { %>
    <img class="qrcode" src="<%= qrCode %>" width="250px" height="250px">
  <% } else { %>
    <form class="form" name="js-alipay-form" method="post" action="/api/pay">
      <input type="hidden" name="soft" value="<%= soft %>">

      <label for="email">Email</label>
      <input class="field" name="email" type="text" placeholder="username@example.com" /> <br>
      <div class="field-description">
        Email address to receive the license key.
        <div class="validate-msg" id="js-alipay-email-vd-msg"></div>
      </div>
      <br>
      <label for="username">Name</label>
      <input class="field" name="username" type="text" placeholder="username" /> <br>
      <div class="field-description">
        Email and Name will both appear on the license key.
        <div class="validate-msg" id="js-alipay-username-vd-msg"></div>
      </div>
      <br>
      <input class="radio field js-alipay-from-paytype" name="paytype" type="radio" value="alipay" checked="true" data-svalue="支付宝支付 ¥<%= price.cn %>" />
      <span class="radio-desc">支付宝 ¥<%= price.cn %></span>
      <input class="radio field js-alipay-from-paytype" name="paytype" type="radio" value="paypal" data-svalue="Pay via Paypal $<%= price.us %>"/>
      <span class="radio-desc">Paypal $<%= price.us %></span>
      <br>
      <input type="submit" id ="js-alipay-form-submit" class="try" value="支付宝支付 ¥<%= price.cn %>">
    </form>
  <% } %>
</div>

<% include _body_footer %>

<script src="/js/alipay.js"></script>

<% include _html_footer %>
